@model ProcessorInfo.Models.Brand

<h2>Update Brand</h2>

<form asp-action="UpdateBrand" method="post">
    <input type="hidden" asp-for="BrandId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Brand Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
